@model University_II.ViewModels.TeacherSubjectViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Subject</h2>


@using (Html.BeginForm("SaveNewSubject", "Subject"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">

    <div class="form-group">
        @Html.LabelFor(model => model.Subject.Title )
        @Html.TextBoxFor(model => model.Subject.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Subject.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Subject.Credits)
        @Html.TextBoxFor(model => model.Subject.Credits, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Subject.Credits, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Subject.TeacherId)
        @Html.DropDownListFor(model => model.Subject.TeacherId, new SelectList(Model.Teachers, "Id", "Name"),
       "Select Teacher", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Subject.TeacherId, "", new { @class = "text-danger" })
    </div>
</div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
