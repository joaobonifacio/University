@model IEnumerable<University_II.Models.CourseSubject>
@{
    ViewBag.Title = "ChangeCourseSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose New Subject</h2>

<table class="table">
    <tr>
        <th>Subject</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Title)
            </td>
            <td>
                @Html.ActionLink("Choose", "AddNewSubjectToCourse", "Course", new
           { courseId = item.Course.Id, subjectId = item.Subject.ID}, null)
            </td>
        </tr>
    }

    @Html.AntiForgeryToken()


</table>

