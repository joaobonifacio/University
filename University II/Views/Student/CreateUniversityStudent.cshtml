@model University_II.ViewModels.UniversityStudentCreationViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("CreateUniversityStudent", "Student"))
{
    @Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(model => model.Student.Name)
    @Html.EditorFor(model => model.Student.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Student.Name, "", new { @class = "text-danger" })

</div>

<div class="form-group">
    @Html.LabelFor(model => model.Student.Email)
    @Html.EditorFor(model => model.Student.Email, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Student.Email, "", new { @class = "text-danger" })

</div>

<div class="form-group">
    @Html.LabelFor(model => model.Student.IdentificationCard)
    @Html.EditorFor(model => model.Student.IdentificationCard, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Student.IdentificationCard, "", new { @class = "text-danger" })

</div>

<div class="form-group">
    @Html.LabelFor(model => model.Student.CourseId)
    @Html.DropDownListFor(model => model.Student.CourseId, new SelectList(Model.Courses, "Id", "Title"),
   "Select Student Course", new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Student.CourseId, "", new { @class = "text-danger" })

</div>

<div class="form-group">
    @Html.LabelFor(model => model.Student.isEnrolled)
    @Html.CheckBoxFor(model => model.Student.isEnrolled, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Student.isEnrolled, "", new { @class = "text-danger" })

</div>

<div class="form-group">
    <p>Example: 12 Jan 2002</p>
    @Html.LabelFor(model => model.Student.Birthday)
    @Html.TextBoxFor(model => model.Student.Birthday, "{0:d MMM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Student.Birthday, "", new { @class = "text-danger" })

</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
