@model University_II.ViewModels.EditStudentViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Student"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.StudentId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <p class="alert"> StudentId  @Html.DisplayFor(model => model.StudentId, new { @class = "form-control" }) </p>
        @Html.HiddenFor(m => m.StudentId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.EditorFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.StudentId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
