@model IEnumerable<University_II.Models.StudentSubject>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.DisplayNameFor(model => model.Student.Name )
@Html.DisplayNameFor(model => model.Student.CourseId)



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>
 
    @foreach (var item in Model) 
    {
        <tr>
            <td>
                @Html.ActionLink(item.Subject.Title, "Details", "Subject", new { id = item.Subject.ID }, null)
            </td>
            <td>
                @Html.ActionLink(item.Student.Name, "ShowSpecificStudent", "Student", new { id = item.StudentID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Edit Grades", "GradeStudents", "Teacher", new { SubjectTitle = item.Subject.Title}, null)
            </td>
        </tr>
    }
    

</table>