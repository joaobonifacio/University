@model University_II.ViewModels.HireNewTeacherViewModel
@{
    ViewBag.Title = "HireNewTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hire New Teacher</h2>


@using (Html.BeginForm("SaveNewTeacher", "Teacher"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <p>Subjects the new teacher will teach:</p>

    {
        for(int i = 0; i < Model.Subjects.ToArray().Length; i++)
        {
            <p>@Model.Subjects.ToArray()[i].Title</p>
        }
    }

    <div class="form-group">
        @Html.LabelFor(model => model.Teacher.Name)
        @Html.EditorFor(model => model.Teacher.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Teacher.Salary)
        @Html.EditorFor(model => model.Teacher.Salary, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Teacher.Email)
        @Html.EditorFor(model => model.Teacher.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
