@model IEnumerable<University_II.Models.StudentSubject>
@{
    ViewBag.Title = "My Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Students</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Subject.Title, "Details", "Subject", new { id = item.Subject.ID }, null)
            </td>
            <td>
                @Html.ActionLink(item.Student.Name, "Details", "Student", new { id = item.StudentID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Edit Grade", "EditGrade", "Teacher", new { studentSubjectId = item.StudentSubjectID }, null)
            </td>
        </tr>
    }

    @Html.ActionLink("Back to List", "Index")
</table>